<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="270dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_dialog"
    android:backgroundTint="#FFFFFF">

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#7970ff"
        android:text="Dang Minh Tien"
        android:maxLines="1"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="14sp"
        android:gravity="center"
        android:autoSizeMaxTextSize="16sp"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textAlignment="center"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_user"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/txtStudentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:autoSizeMinTextSize="@android:dimen/thumbnail_height"
        android:text="SE150195"
        android:textAllCaps="true"
        android:textColor="#373737"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"/>


    <com.devlogs.osg.apolo.fptsurvey.screen.common.customview.Button
        android:id="@+id/btnSignOut"
        android:layout_width="95dp"
        android:layout_height="23dp"
        android:text="Sign Out"
        android:textSize="11sp"
        android:background="@null"
        android:textColor="#4F4F4F"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        />


    <com.devlogs.osg.apolo.fptsurvey.screen.common.customview.Button
        android:id="@+id/btnCancel"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="#7970ff"
        android:shadowColor="#FFFFFF"
        android:text="cancel"
        android:textSize="10sp"
        android:gravity="center"
        style="?android:attr/borderlessButtonStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="42dp"
        android:textStyle="bold"/>


</LinearLayout>
